            function check(form) { /*function to check userid & password*/
                /*the following code checkes whether the entered userid and password are matching*/
                if(form.userid.value == "wfspit" && form.pswrd.value == "mywfs") {
                    alert("Good Job!")<!-- window.open('target.html')/*opens the target page while Id & password matches*/ -->
                }
                else {
                    alert("Username OR Password is incorrect")/*displays error message*/
                }
