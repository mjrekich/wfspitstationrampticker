	            			function check(form) {
       	         				if(form.userid.value == "wfs" && form.pswrd.value == "wfs") {
       	             					document.getElementById('header').style.backgroundColor = 'yellow'
                				}
                				else {
                    					document.getElementById('inc').innerHTML = "Incorrect";
             					}
                              
          				}
